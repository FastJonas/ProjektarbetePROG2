import time


class Room:
    def __init__(self,location,floor,object,pathway1,pathway2,pathway3,pathway4):
        self.plats=location
        self.object=object
        self.w=pathway1
        self.n=pathway2
        self.e=pathway3
        self.s=pathway4
        self.floor=floor
        
        
    def nytt_rum(self):
         print(f"Du kommer in i {self.plats} och ser dig runt.")
         #time.sleep(3)
         print(f"Du ser ett antal dörrar")
         #time.sleep(1.5)
         if self.w !=None:
            print(f"dörren till vänster leder till {self.w}")
            #time.sleep(1.5)
         if self.n !=None:
            print(f"dörren åt norr leder till {self.n}")
            #time.sleep(1.5)
         if self.e !=None:
            print(f"dörren till höger leder till {self.e}")
            #time.sleep(1.5)
         if self.s !=None:
            print(f"dörren åt söder leder till {self.s}")
            #time.sleep(1.5)
    
    
    
    
    def choice(self):
        global player_room
        global val
        while True:
            val=input(f"vill du gå till {self.w} (1), {self.n} (2), {self.e}(3) eller {self.s} (4)?")
            if val==str(1):
                print(f"du går in i {self.w}.")
                player_room=self.w
                break
            elif val==str(2):
                print(f"du går in i {self.n}.")
                player_room=self.n 
                break
            elif val==str(3):
                print(f"du går in i {self.e}.")
                player_room=self.e
                break
            elif val==str(4):
                print(f"du går in i {self.s}.")
                player_room=self.s
                break
            else:
                print("Inget alternativ valt, försök igen.")

   

def flytt(west,north,east,south):
    global number_1
    global number_2
    global number_3
    global number_4
    
    if val==str(west):
        west.nytt_rum()
        west.choice()
        number_1=west.w
        number_2=west.n
        number_3=west.e
        number_4=west.s
    elif val==str(north):
        north.nytt_rum()
        north.choice()
        number_1=north.w
        number_2=north.n
        number_3=north.e
        number_4=north.s
    elif val==str(east):
        east.nytt_rum()
        east.choice()
        number_1=east.w
        number_2=east.n
        number_3=east.e
        number_4=east.s
    elif val==str(south):
        south.nytt_rum()
        south.choice()     
        number_1=south.w
        number_2=south.n
        number_3=south.e
        number_4=south.s




hallen=Room("hallen","1st",0,"sovrummet","matsalen","köket","utsidan")
sovrummet=Room("sovrummet","1st",1,"garderoben","gästrummet","hallen",None)
matsalen=Room("matsalen","1st",0,"hallen","köket",None,None)
köket=Room(None,None,None,None,None,None,None,)
utsidan=Room(None,None,None,None,None,None,None,)

number_1=sovrummet
