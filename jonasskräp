import time


class Room:
    def __init__(self, location, floor, object, pathway1, pathway2, pathway3,
                 pathway4):
        self.plats = location
        self.object = object
        self.w = pathway1
        self.n = pathway2
        self.e = pathway3
        self.s = pathway4
        self.floor = floor

    def nytt_rum(self):
        print(f"Du kommer in i {self.plats} och ser dig runt.")
        print(f"Du ser ett antal dörrar")
        if self.w != None:
            print(f"dörren till vänster leder till {self.w}")
        if self.n != None:
            print(f"dörren åt norr leder till {self.n}")
        if self.e != None:
            print(f"dörren till höger leder till {self.e}")
        if self.s != None:
            print(f"dörren åt söder leder till {self.s}")

    def choice(self):
        global player_room
        global val
        while True:
            val = input(
                f"vill du gå till {self.w} (1), {self.n} (2), {self.e}(3) eller {self.s} (4)?")
            if val == str(1):
                print(f"du går in i {self.w}.")
                player_room = self.w
                break
            elif val == str(2):
                print(f"du går in i {self.n}.")
                player_room = self.n
                break
            elif val == str(3):
                print(f"du går in i {self.e}.")
                player_room = self.e
                break
            elif val == str(4):
                print(f"du går in i {self.s}.")
                player_room = self.s
                break
            else:
                print("Inget alternativ valt, försök igen.")


def flytt(west, north, east, south):
    if val == str(1):
        west.nytt_rum()
        west.choice()
    elif val == str(2):
        north.nytt_rum()
        north.choice()
    elif val == str(3):
        east.nytt_rum()
        east.choice()
    elif val == str(4):
        south.nytt_rum()
        south.choice()

hallen = Room("hallen", "1st", 0, "sovrummet", "matsalen", "köket", "utsidan")
sovrummet = Room("sovrummet", "1st", 1, "garderoben", "gästrummet", "hallen",
                 None)
matsalen = Room("matsalen", "1st", 0, "hallen", "köket", None, None)
köket = Room(None, None, None, None, None, None, None, )
utsidan = Room(None, None, None, None, None, None, None, )

hallen.nytt_rum()
hallen.choice()

print(player_room)
